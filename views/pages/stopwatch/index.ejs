 <html>
   <head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
      var startTime = new Date(2021, 10, 20, 9, 0, 0, 0)

      function pad(num, size) {
          num = num.toString();
          while (num.length < size) num = "0" + num;
          return num;
      }

      setInterval(function() {
        var now = new Date();
        var elapsed = now - startTime
        var hours = Math.floor(elapsed / (1000*60*60))
        elapsed -= hours * 1000*60*60
        var minutes = Math.floor(elapsed / (1000*60))
        elapsed -= minutes * 1000*60
        var seconds = Math.floor(elapsed / 1000)
        $(".stopwatch").html(pad(hours, 2) + ":" + pad(minutes, 2) + ":" + pad(seconds, 2))
      }, 240)
    </script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Amiko&display=swap');
      body {
        background: #000000;
        overflow: hidden;
      }

      .stopwatch {
        background-color: #ffffffc6;
        color: black;
        font-family: Amiko;
        font-weight: bold;
        width: 190px;
        text-align: center;
        padding: 10px;
        font-size: 35px;
        border-radius: 5px;
      }
    </style>
   </head>
   <body>
    <div class="stopwatch"></div>
   </body>
 </html>